{
    "name": "dsewth/database-helper",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Dsewth\\DatabaseHelper\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Theofilos Intzoglou",
            "email": "int.teo@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "monolog/monolog": "^2.5"
    },
    "scripts": {
        "check-compatibility": "phpcs -p src --standard=PHPCompatibility --runtime-set testVersion 7.4-",
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.4",
        "mockery/mockery": "^1.5",
        "phpcompatibility/php-compatibility": "^10.0@dev"
    }
}
